{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "PlaybookName": {
      "defaultValue": "SOCRadar-CloseAlarm-OnIncidentClose",
      "type": "string",
      "metadata": {
        "description": "Logic App (Playbook) adı"
      }
    },
    "SOCRadarAPIKey": {
      "type": "securestring",
      "metadata": {
        "description": "SOCRadar API Key - https://platform.socradar.com adresinden alınabilir"
      }
    },
    "SOCRadarCompanyId": {
      "type": "string",
      "metadata": {
        "description": "SOCRadar Company ID"
      }
    },
    "WorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Azure Sentinel Log Analytics Workspace adı"
      }
    },
    "WorkspaceResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Azure Sentinel Workspace'in bulunduğu Resource Group"
      }
    }
  },
  "variables": {
    "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('PlaybookName'))]",
    "SOCRadarAPIEndpoint": "https://platform.socradar.com/api"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('AzureSentinelConnectionName')]",
      "location": "[resourceGroup().location]",
      "kind": "V1",
      "properties": {
        "displayName": "Azure Sentinel Connection",
        "customParameterValues": {},
        "parameterValueType": "Alternative",
        "api": {
          "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
        }
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2017-07-01",
      "name": "[parameters('PlaybookName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "hidden-SentinelTemplateName": "SOCRadar-Integration",
        "hidden-SentinelTemplateVersion": "2.1"
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]"
      ],
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "defaultValue": {},
              "type": "Object"
            },
            "SOCRadarAPIKey": {
              "defaultValue": "[parameters('SOCRadarAPIKey')]",
              "type": "SecureString"
            },
            "SOCRadarAPIEndpoint": {
              "defaultValue": "[variables('SOCRadarAPIEndpoint')]",
              "type": "String"
            },
            "SOCRadarCompanyId": {
              "defaultValue": "[parameters('SOCRadarCompanyId')]",
              "type": "String"
            }
          },
          "triggers": {
            "Microsoft_Sentinel_incident": {
              "type": "ApiConnectionWebhook",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                  }
                },
                "body": {
                  "callback_url": "@{listCallbackUrl()}"
                },
                "path": "/incident-creation"
              }
            }
          },
          "actions": {
            "Check_Incident_Status": {
              "type": "If",
              "expression": {
                "and": [
                  {
                    "equals": [
                      "@triggerBody()?['object']?['properties']?['status']",
                      "Closed"
                    ]
                  }
                ]
              },
              "actions": {
                "Initialize_AlarmID_Variable": {
                  "type": "InitializeVariable",
                  "inputs": {
                    "variables": [
                      {
                        "name": "AlarmID",
                        "type": "string",
                        "value": ""
                      }
                    ]
                  },
                  "runAfter": {}
                },
                "Get_Incident_Title": {
                  "type": "Compose",
                  "inputs": "@triggerBody()?['object']?['properties']?['title']",
                  "runAfter": {
                    "Initialize_AlarmID_Variable": [
                      "Succeeded"
                    ]
                  }
                },
                "Check_If_Title_Contains_AlarmID": {
                  "type": "If",
                  "expression": {
                    "and": [
                      {
                        "contains": [
                          "@outputs('Get_Incident_Title')",
                          "Alarm ID"
                        ]
                      }
                    ]
                  },
                  "actions": {
                    "Extract_AlarmID_From_Title": {
                      "type": "Compose",
                      "inputs": "@split(outputs('Get_Incident_Title'), 'Alarm ID')",
                      "runAfter": {}
                    },
                    "Get_AlarmID_Part": {
                      "type": "Compose",
                      "inputs": "@last(outputs('Extract_AlarmID_From_Title'))",
                      "runAfter": {
                        "Extract_AlarmID_From_Title": [
                          "Succeeded"
                        ]
                      }
                    },
                    "Clean_AlarmID": {
                      "type": "Compose",
                      "inputs": "@trim(replace(replace(replace(replace(outputs('Get_AlarmID_Part'), ':', ''), '-', ''), ' ', ''), '.', ''))",
                      "runAfter": {
                        "Get_AlarmID_Part": [
                          "Succeeded"
                        ]
                      }
                    },
                    "Extract_Numeric_AlarmID": {
                      "type": "Compose",
                      "inputs": "@if(greater(length(outputs('Clean_AlarmID')), 0), if(contains(outputs('Clean_AlarmID'), '|'), first(split(outputs('Clean_AlarmID'), '|')), outputs('Clean_AlarmID')), '')",
                      "runAfter": {
                        "Clean_AlarmID": [
                          "Succeeded"
                        ]
                      }
                    },
                    "Set_AlarmID_Variable": {
                      "type": "SetVariable",
                      "inputs": {
                        "name": "AlarmID",
                        "value": "@{outputs('Extract_Numeric_AlarmID')}"
                      },
                      "runAfter": {
                        "Extract_Numeric_AlarmID": [
                          "Succeeded"
                        ]
                      }
                    }
                  },
                  "runAfter": {
                    "Get_Incident_Title": [
                      "Succeeded"
                    ]
                  },
                  "else": {
                    "actions": {
                      "Check_Alternative_Format_Hyphen": {
                        "type": "If",
                        "expression": {
                          "or": [
                            {
                              "contains": [
                                "@outputs('Get_Incident_Title')",
                                "AlarmID"
                              ]
                            },
                            {
                              "contains": [
                                "@outputs('Get_Incident_Title')",
                                "Alarm-ID"
                              ]
                            },
                            {
                              "contains": [
                                "@outputs('Get_Incident_Title')",
                                "alarm-id"
                              ]
                            }
                          ]
                        },
                        "actions": {
                          "Try_Alternative_Parse": {
                            "type": "Compose",
                            "inputs": "@replace(replace(replace(outputs('Get_Incident_Title'), 'AlarmID', 'Alarm ID'), 'Alarm-ID', 'Alarm ID'), 'alarm-id', 'Alarm ID')",
                            "runAfter": {}
                          },
                          "Extract_From_Alternative": {
                            "type": "Compose",
                            "inputs": "@split(outputs('Try_Alternative_Parse'), 'Alarm ID')",
                            "runAfter": {
                              "Try_Alternative_Parse": [
                                "Succeeded"
                              ]
                            }
                          },
                          "Get_Last_Part_Alternative": {
                            "type": "Compose",
                            "inputs": "@last(outputs('Extract_From_Alternative'))",
                            "runAfter": {
                              "Extract_From_Alternative": [
                                "Succeeded"
                              ]
                            }
                          },
                          "Clean_Alternative_ID": {
                            "type": "Compose",
                            "inputs": "@trim(replace(replace(replace(replace(outputs('Get_Last_Part_Alternative'), ':', ''), '-', ''), ' ', ''), '.', ''))",
                            "runAfter": {
                              "Get_Last_Part_Alternative": [
                                "Succeeded"
                              ]
                            }
                          },
                          "Extract_Numeric_Alternative": {
                            "type": "Compose",
                            "inputs": "@if(greater(length(outputs('Clean_Alternative_ID')), 0), if(contains(outputs('Clean_Alternative_ID'), '|'), first(split(outputs('Clean_Alternative_ID'), '|')), outputs('Clean_Alternative_ID')), '')",
                            "runAfter": {
                              "Clean_Alternative_ID": [
                                "Succeeded"
                              ]
                            }
                          },
                          "Set_AlarmID_Alternative": {
                            "type": "SetVariable",
                            "inputs": {
                              "name": "AlarmID",
                              "value": "@{outputs('Extract_Numeric_Alternative')}"
                            },
                            "runAfter": {
                              "Extract_Numeric_Alternative": [
                                "Succeeded"
                              ]
                            }
                          }
                        },
                        "runAfter": {}
                      }
                    }
                  }
                },
                "Validate_AlarmID": {
                  "type": "If",
                  "expression": {
                    "and": [
                      {
                        "not": {
                          "equals": [
                            "@variables('AlarmID')",
                            ""
                          ]
                        }
                      },
                      {
                        "not": {
                          "equals": [
                            "@variables('AlarmID')",
                            null
                          ]
                        }
                      },
                      {
                        "greater": [
                          "@length(variables('AlarmID'))",
                          0
                        ]
                      }
                    ]
                  },
                  "actions": {
                    "Determine_Close_Reason": {
                      "type": "Switch",
                      "expression": "@triggerBody()?['object']?['properties']?['classification']",
                      "cases": {
                        "FalsePositive": {
                          "case": "FalsePositive",
                          "actions": {
                            "Close_as_False_Positive_in_SOCRadar": {
                              "type": "Http",
                              "inputs": {
                                "method": "POST",
                                "uri": "@{parameters('SOCRadarAPIEndpoint')}/company/@{parameters('SOCRadarCompanyId')}/incidents/@{variables('AlarmID')}/false-positive",
                                "headers": {
                                  "Authorization": "Bearer @{parameters('SOCRadarAPIKey')}",
                                  "Content-Type": "application/json"
                                },
                                "body": {
                                  "alarmIds": [
                                    "@int(variables('AlarmID'))"
                                  ],
                                  "comments": "❌ Incident Azure Sentinel'de False Positive olarak kapatıldı. Incident Title: @{triggerBody()?['object']?['properties']?['title']}. Incident ID: @{triggerBody()?['object']?['properties']?['incidentNumber']}. Kapatma sebebi: @{triggerBody()?['object']?['properties']?['classificationComment']}"
                                }
                              },
                              "runAfter": {}
                            }
                          }
                        },
                        "TruePositive": {
                          "case": "TruePositive",
                          "actions": {
                            "Resolve_Incident_in_SOCRadar": {
                              "type": "Http",
                              "inputs": {
                                "method": "POST",
                                "uri": "@{parameters('SOCRadarAPIEndpoint')}/company/@{parameters('SOCRadarCompanyId')}/incidents/@{variables('AlarmID')}/resolve",
                                "headers": {
                                  "Authorization": "Bearer @{parameters('SOCRadarAPIKey')}",
                                  "Content-Type": "application/json"
                                },
                                "body": {
                                  "alarmIds": [
                                    "@int(variables('AlarmID'))"
                                  ],
                                  "comments": "✅ Incident Azure Sentinel'de True Positive olarak çözümlendi. Classification: @{triggerBody()?['object']?['properties']?['classification']}. Sub-classification: @{triggerBody()?['object']?['properties']?['classificationReason']}. Incident Title: @{triggerBody()?['object']?['properties']?['title']}. Incident ID: @{triggerBody()?['object']?['properties']?['incidentNumber']}. Yorum: @{triggerBody()?['object']?['properties']?['classificationComment']}"
                                }
                              },
                              "runAfter": {}
                            }
                          }
                        },
                        "BenignPositive": {
                          "case": "BenignPositive",
                          "actions": {
                            "Resolve_as_BenignPositive_in_SOCRadar": {
                              "type": "Http",
                              "inputs": {
                                "method": "POST",
                                "uri": "@{parameters('SOCRadarAPIEndpoint')}/company/@{parameters('SOCRadarCompanyId')}/incidents/@{variables('AlarmID')}/resolve",
                                "headers": {
                                  "Authorization": "Bearer @{parameters('SOCRadarAPIKey')}",
                                  "Content-Type": "application/json"
                                },
                                "body": {
                                  "alarmIds": [
                                    "@int(variables('AlarmID'))"
                                  ],
                                  "comments": "ℹ️ Incident Azure Sentinel'de Benign Positive olarak çözümlendi. Classification Reason: @{triggerBody()?['object']?['properties']?['classificationReason']}. Incident Title: @{triggerBody()?['object']?['properties']?['title']}. Incident ID: @{triggerBody()?['object']?['properties']?['incidentNumber']}. Yorum: @{triggerBody()?['object']?['properties']?['classificationComment']}"
                                }
                              },
                              "runAfter": {}
                            }
                          }
                        }
                      },
                      "default": {
                        "actions": {
                          "Resolve_as_Default_in_SOCRadar": {
                            "type": "Http",
                            "inputs": {
                              "method": "POST",
                              "uri": "@{parameters('SOCRadarAPIEndpoint')}/company/@{parameters('SOCRadarCompanyId')}/incidents/@{variables('AlarmID')}/resolve",
                              "headers": {
                                "Authorization": "Bearer @{parameters('SOCRadarAPIKey')}",
                                "Content-Type": "application/json"
                              },
                              "body": {
                                "alarmIds": [
                                  "@int(variables('AlarmID'))"
                                ],
                                "comments": "ℹ️ Incident Azure Sentinel'de kapatıldı. Classification: @{triggerBody()?['object']?['properties']?['classification']}. Sebep: @{triggerBody()?['object']?['properties']?['classificationReason']}. Incident Title: @{triggerBody()?['object']?['properties']?['title']}. Incident ID: @{triggerBody()?['object']?['properties']?['incidentNumber']}. Yorum: @{triggerBody()?['object']?['properties']?['classificationComment']}"
                              }
                            },
                            "runAfter": {}
                          }
                        }
                      },
                      "runAfter": {}
                    },
                    "Add_Comment_to_Sentinel_Incident": {
                      "type": "ApiConnection",
                      "inputs": {
                        "host": {
                          "connection": {
                            "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                          }
                        },
                        "method": "post",
                        "path": "/Incidents/Comment",
                        "body": {
                          "incidentArmId": "@triggerBody()?['object']?['id']",
                          "message": "✅ SOCRadar alarm otomatik olarak senkronize edildi. Alarm ID: @{variables('AlarmID')}"
                        }
                      },
                      "runAfter": {
                        "Determine_Close_Reason": [
                          "Succeeded"
                        ]
                      }
                    }
                  },
                  "runAfter": {
                    "Check_If_Title_Contains_AlarmID": [
                      "Succeeded"
                    ]
                  },
                  "else": {
                    "actions": {
                      "Add_Warning_Comment": {
                        "type": "ApiConnection",
                        "inputs": {
                          "host": {
                            "connection": {
                              "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                            }
                          },
                          "method": "post",
                          "path": "/Incidents/Comment",
                          "body": {
                            "incidentArmId": "@triggerBody()?['object']?['id']",
                            "message": "⚠️ SOCRadar Alarm ID bulunamadı. Incident title'da 'Alarm ID: [SAYI]' veya 'AlarmID: [SAYI]' formatında olmalıdır. Mevcut title: @{triggerBody()?['object']?['properties']?['title']}"
                          }
                        },
                        "runAfter": {}
                      }
                    }
                  }
                }
              },
              "runAfter": {}
            }
          },
          "outputs": {}
        },
        "parameters": {
          "$connections": {
            "value": {
              "azuresentinel": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                "connectionName": "[variables('AzureSentinelConnectionName')]",
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]",
                "connectionProperties": {
                  "authentication": {
                    "type": "ManagedServiceIdentity"
                  }
                }
              }
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "PlaybookName": {
      "type": "string",
      "value": "[parameters('PlaybookName')]"
    },
    "PlaybookResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Logic/workflows', parameters('PlaybookName'))]"
    },
    "PlaybookIdentityPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Logic/workflows', parameters('PlaybookName')), '2017-07-01', 'full').identity.principalId]"
    }
  }
}
