{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string",
      "defaultValue": "SOCRadar-CloseAlarm-OnIncidentClose"
    },
    "SOCRadarAPIKey": {
      "type": "SecureString"
    },
    "SOCRadarAPIEndpoint": {
      "type": "String",
      "defaultValue": "https://platform.socradar.com/api"
    },
    "SOCRadarCompanyId": {
      "type": "String",
      "defaultValue": "330"
    },
    "ExistingAzureSentinelConnectionId": {
      "type": "String",
      "metadata": {
        "description": "Mevcut Azure Sentinel Connection Resource ID"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[parameters('logicAppName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "AzureSentinelConnectionName": {
              "type": "String"
            },
            "SOCRadarAPIKey": {
              "type": "SecureString"
            },
            "SOCRadarAPIEndpoint": {
              "type": "String"
            },
            "SOCRadarCompanyId": {
              "type": "String"
            }
          },
          "triggers": {
            "Microsoft_Sentinel_incident": {
              "type": "ApiConnectionWebhook",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('AzureSentinelConnectionName')"
                  }
                },
                "body": {
                  "callback_url": "@{listCallbackUrl()}"
                },
                "path": "/incident-update"
              }
            }
          },
          "actions": {
            "Initialize_AlarmID": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "AlarmID",
                    "type": "string",
                    "value": ""
                  }
                ]
              }
            },
            "Check_Incident_Status": {
              "type": "If",
              "expression": {
                "equals": [
                  "@triggerBody()?['object']?['properties']?['status']",
                  "Closed"
                ]
              },
              "runAfter": {
                "Initialize_AlarmID": ["Succeeded"]
              },
              "actions": {
                "Extract_AlarmID_From_Title": {
                  "type": "SetVariable",
                  "inputs": {
                    "name": "AlarmID",
                    "value": "@trim(last(split(triggerBody()?['object']?['properties']?['title'], '-')))"
                  }
                },
                "Determine_Close_Reason": {
                  "type": "Switch",
                  "expression": "@triggerBody()?['object']?['properties']?['classification']",
                  "cases": {
                    "FalsePositive": {
                      "case": "FalsePositive",
                      "actions": {
                        "Close_as_False_Positive_in_SOCRadar": {
                          "type": "Http",
                          "inputs": {
                            "method": "POST",
                            "uri": "@{concat(parameters('SOCRadarAPIEndpoint'), '/company/', parameters('SOCRadarCompanyId'), '/alarms/status/change')}",
                            "headers": {
                              "Authorization": "Bearer @{parameters('SOCRadarAPIKey')}",
                              "Content-Type": "application/json"
                            },
                            "body": {
                              "alarm_ids": ["@variables('AlarmID')"],
                              "status": 9,
                              "comments": "❌ False Positive - Sentinel Incident: @{triggerBody()?['object']?['properties']?['incidentNumber']}"
                            }
                          }
                        }
                      }
                    }
                  },
                  "default": {
                    "actions": {
                      "Close_as_Resolved_in_SOCRadar": {
                        "type": "Http",
                        "inputs": {
                          "method": "POST",
                          "uri": "@{concat(parameters('SOCRadarAPIEndpoint'), '/company/', parameters('SOCRadarCompanyId'), '/alarms/status/change')}",
                          "headers": {
                            "Authorization": "Bearer @{parameters('SOCRadarAPIKey')}",
                            "Content-Type": "application/json"
                          },
                          "body": {
                            "alarm_ids": ["@variables('AlarmID')"],
                            "status": 2,
                            "comments": "✅ Resolved - Sentinel Incident: @{triggerBody()?['object']?['properties']?['incidentNumber']}"
                          }
                        }
                      }
                    }
                  }
                },
                "Add_Comment_To_Sentinel_Incident": {
                  "type": "ApiConnection",
                  "runAfter": {
                    "Determine_Close_Reason": ["Succeeded"]
                  },
                  "inputs": {
                    "host": {
                      "connection": {
                        "name": "@parameters('AzureSentinelConnectionName')"
                      }
                    },
                    "method": "post",
                    "path": "/Incidents/Comment",
                    "body": {
                      "incidentArmId": "@triggerBody()?['object']?['id']",
                      "message": "✅ SOCRadar alarm updated. Alarm ID: @{variables('AlarmID')}"
                    }
                  }
                }
              },
              "else": {
                "actions": {}
              }
            }
          }
        },
        "parameters": {
          "AzureSentinelConnectionName": {
            "value": "[parameters('ExistingAzureSentinelConnectionId')]"
          },
          "SOCRadarAPIKey": {
            "value": "[parameters('SOCRadarAPIKey')]"
          },
          "SOCRadarAPIEndpoint": {
            "value": "[parameters('SOCRadarAPIEndpoint')]"
          },
          "SOCRadarCompanyId": {
            "value": "[parameters('SOCRadarCompanyId')]"
          }
        }
      }
    }
  ]
}
